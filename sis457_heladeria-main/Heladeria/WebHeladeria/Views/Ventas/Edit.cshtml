@model WebHeladeria.Models.Ventum

@{
    ViewData["Title"] = "Editar Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center mt-5 mb-5">
    <div class="card shadow p-4 rounded w-100" style="max-width: 700px; background-color: #fff0f5;">
        <h2 class="mb-4 text-center text-dark">Editar Venta</h2>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="IdUsuario" class="form-label">Usuario: </label>
                <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario">
                    <option value="">-- Seleccione un usuario --</option>
                </select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdCliente" class="form-label">Cliente: </label>
                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente">
                    <option value="">-- Seleccione un cliente --</option>
                </select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdTipoPago" class="form-label">Tipo de Pago: </label>
                <select asp-for="IdTipoPago" class="form-control" asp-items="ViewBag.IdTipoPago">
                    <option value="">-- Seleccione un tipo de pago --</option>
                </select>
                <span asp-validation-for="IdTipoPago" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MontoTotal" class="form-label">Monto Total: </label>
                <input asp-for="MontoTotal" class="form-control" />
                <span asp-validation-for="MontoTotal" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MontoPago" class="form-label">Monto Pago: </label>
                <input asp-for="MontoPago" class="form-control" />
                <span asp-validation-for="MontoPago" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MontoCambio" class="form-label">Cambio: </label>
                <input asp-for="MontoCambio" class="form-control" />
                <span asp-validation-for="MontoCambio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UsuarioRegistro" class="form-label">Usuario Registro: </label>
                <input asp-for="UsuarioRegistro" class="form-control" />
                <span asp-validation-for="UsuarioRegistro" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaRegistro" class="form-label">Fecha Registro: </label>
                <input asp-for="FechaRegistro" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Estado" class="form-label">Estado: </label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="text-end mt-4">
                <a asp-action="Index" class="btn btn-outline-dark me-2">
                    <i class="fa fa-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn text-white" style="background-color: #f497b6;">
                    <i class="fa fa-save"></i> Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
