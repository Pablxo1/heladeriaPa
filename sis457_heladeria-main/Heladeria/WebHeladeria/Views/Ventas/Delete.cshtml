@model WebHeladeria.Models.Ventum

@{
    ViewData["Title"] = "Eliminar Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center mt-5 mb-5">
    <div class="card shadow p-4 rounded w-100" style="max-width: 700px; background-color: #fff0f5;">
        <h2 class="mb-4 text-center text-dark">¿Estás seguro que deseas eliminar esta venta?</h2>

        <dl class="row">
            <dt class="col-sm-4">Cliente</dt>
            <dd class="col-sm-8">@Model.IdClienteNavigation?.Nombre</dd>

            <dt class="col-sm-4">Tipo de Pago</dt>
            <dd class="col-sm-8">@Model.IdTipoPagoNavigation?.Descripcion</dd>

            <dt class="col-sm-4">Monto Total</dt>
            <dd class="col-sm-8">@Model.MontoTotal.ToString("C")</dd>

            <dt class="col-sm-4">Monto Pago</dt>
            <dd class="col-sm-8">@Model.MontoPago.ToString("C")</dd>

            <dt class="col-sm-4">Cambio</dt>
            <dd class="col-sm-8">@Model.MontoCambio.ToString("C")</dd>

            <dt class="col-sm-4">Usuario Registro</dt>
            <dd class="col-sm-8">@Model.UsuarioRegistro</dd>

            <dt class="col-sm-4">Fecha Registro</dt>
            <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-4">Estado</dt>
            <dd class="col-sm-8">
                @if (Model.Estado == 1)
                {
                    <span class="badge bg-success">Activo</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactivo</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="text-end mt-4">
                <a asp-action="Index" class="btn btn-outline-dark me-2">
                    <i class="fa fa-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash"></i> Eliminar
                </button>
            </div>
        </form>
    </div>
</div>
