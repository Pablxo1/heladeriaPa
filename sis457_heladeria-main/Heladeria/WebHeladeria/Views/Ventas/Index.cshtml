
@model IEnumerable<WebHeladeria.Models.Ventum>

@{
    ViewData["Title"] = "Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-center" style="color:#8B005D;">Ventas</h1>

<p>
    <a asp-action="Create" class="btn btn-rosa-claro text-white">
        <i class="fa fa-plus"></i> Registrar Venta
    </a>
</p>

<table class="table" style="background-color: #fff0f5; color: #8B005D;">
    <thead style="background-color: #f497b6; color: white;">
        <tr>
            <th>Cliente</th>
            <th>Tipo de Pago</th>
            <th>Monto Total</th>
            <th>Monto Pago</th>
            <th>Cambio</th>
            <th>Usuario</th>
            <th>Fecha de Registro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.IdClienteNavigation?.Nombre ?? "N/A")</td>
                <td>@(item.IdTipoPagoNavigation?.Descripcion ?? "N/A")</td>
                <td>@item.MontoTotal.ToString("N2")</td>
                <td>@item.MontoPago.ToString("N2")</td>
                <td>@item.MontoCambio.ToString("N2")</td>
                <td>@item.UsuarioRegistro</td>
                <td>@item.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <div class="d-flex acciones-botones">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-detalles me-2">
                            <i class="fa fa-eye"></i> Detalles
                        </a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn-rosa-claro {
        background-color: #f497b6;
        border-color: #f497b6;
    }

        .btn-rosa-claro:hover {
            background-color: #e06a8a;
            border-color: #e06a8a;
            color: white;
        }
</style>
