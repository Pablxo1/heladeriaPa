<div class="container mt-5 mb-5">
    <div class="card shadow-sm rounded" style="max-width: 700px; margin: auto; background-color: #fff0f5;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4 text-danger">
                <i class="fa fa-exclamation-triangle"></i> ¿Está seguro que desea eliminar este cliente?
            </h2>

            <dl class="row">
                <dt class="col-sm-4 fw-semibold">Nombre:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-4 fw-semibold">NIT:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nit)</dd>

                <dt class="col-sm-4 fw-semibold">Celular:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Celular)</dd>

                <dt class="col-sm-4 fw-semibold">Usuario Registro:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UsuarioRegistro)</dd>

                <dt class="col-sm-4 fw-semibold">Fecha Registro:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaRegistro)</dd>

                <dt class="col-sm-4 fw-semibold">Estado:</dt>
                <dd class="col-sm-8">
                    @if (Model.Estado == 1)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-3">
                    <i class="fa fa-trash"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fa fa-arrow-left"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

