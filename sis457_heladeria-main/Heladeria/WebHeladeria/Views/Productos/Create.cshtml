@model WebHeladeria.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center mt-5 mb-5">
    <div class="card shadow p-4 rounded w-100" style="max-width: 700px; background-color: #fff0f5;">
        <h2 class="mb-4 text-center text-dark">Agregar Nuevo Producto</h2>

        <form asp-action="Create">
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label">Nombre: </label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdSabor" class="form-label">Sabor: </label>
                <select asp-for="IdSabor" class="form-control">
                    <option value="">-- Seleccione un sabor --</option>
                    @foreach (var sabor in (SelectList)ViewBag.IdSabor)
                    {
                        <option value="@sabor.Value">@sabor.Text</option>
                    }
                </select>
                <span asp-validation-for="IdSabor" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="IdPresentacion" class="form-label">Presentación: </label>
                <select asp-for="IdPresentacion" class="form-control" asp-items="ViewBag.IdPresentacion">
                    <option value="">-- Seleccione una presentación --</option>
                </select>
                <span asp-validation-for="IdPresentacion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Precio" class="form-label">Precio: </label>
                <input asp-for="Precio" class="form-control" type="number" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdProveedor" class="form-label">Proveedor: </label>
                <select asp-for="IdProveedor" class="form-control" asp-items="ViewBag.IdProveedor">
                    <option value="">-- Seleccione un proveedor --</option>
                </select>
                <span asp-validation-for="IdProveedor" class="text-danger"></span>
            </div>

            <div class="text-end mt-4">
                <a asp-action="Index" class="btn btn-outline-dark me-2">
                    <i class="fa fa-arrow-left"></i> Volver a Lista
                </a>
                <button type="submit" class="btn text-white" style="background-color: #f497b6;">
                    <i class="fa fa-save"></i> Guardar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
