@model WebHeladeria.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5 mb-5">
    <div class="card shadow-sm rounded" style="max-width: 700px; margin: auto; background-color: #fff0f5;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4 text-primary">
                <i class="fa fa-edit"></i> Editar Producto
            </h2>

            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UsuarioRegistro" />
                <input type="hidden" asp-for="FechaRegistro" />
                <input type="hidden" asp-for="Estado" />

                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre:</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IdSabor" class="form-label">Sabor:</label>
                    <select asp-for="IdSabor" class="form-control" asp-items="ViewBag.IdSabor">
                        <option value="">-- Seleccione un sabor --</option>
                    </select>
                    <span asp-validation-for="IdSabor" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IdProveedor" class="form-label">Proveedor:</label>
                    <select asp-for="IdProveedor" class="form-control" asp-items="ViewBag.IdProveedor">
                        <option value="">-- Seleccione un proveedor --</option>
                    </select>
                    <span asp-validation-for="IdProveedor" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IdPresentacion" class="form-label">Presentación:</label>
                    <select asp-for="IdPresentacion" class="form-control" asp-items="ViewBag.IdPresentacion">
                        <option value="">-- Seleccione una presentación --</option>
                    </select>
                    <span asp-validation-for="IdPresentacion" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Precio" class="form-label">Precio:</label>
                    <input asp-for="Precio" class="form-control" type="number" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="fa fa-arrow-left"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}