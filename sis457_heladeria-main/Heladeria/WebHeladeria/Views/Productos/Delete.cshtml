<div class="container mt-5 mb-5">
    <div class="card shadow-sm rounded" style="max-width: 700px; margin: auto; background-color: #fff0f5;">
        <div class="card-body">
            <h2 class="card-title text-center text-danger mb-4">
                <i class="fa fa-exclamation-triangle"></i> Confirmar Eliminación
            </h2>

            <p class="text-center fs-5 mb-4">
                ¿Estás seguro de que quieres eliminar este producto?
            </p>

            <dl class="row">
                <dt class="col-sm-4 fw-semibold">Nombre:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-4 fw-semibold">Precio:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Precio)</dd>

                <dt class="col-sm-4 fw-semibold">Sabor:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdSaborNavigation.Nombre)</dd>

                <dt class="col-sm-4 fw-semibold">Presentación:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdPresentacionNavigation.Descripcion)</dd>

                <dt class="col-sm-4 fw-semibold">Proveedor:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdProveedorNavigation.RazonSocial)</dd>

                <dt class="col-sm-4 fw-semibold">Usuario Registro:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UsuarioRegistro)</dd>

                <dt class="col-sm-4 fw-semibold">Fecha Registro:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaRegistro)</dd>

                <dt class="col-sm-4 fw-semibold">Estado:</dt>
                <dd class="col-sm-8">
                    @if (Model.Estado == 1)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" method="post" class="text-center mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg me-3">
                    <i class="fa fa-trash"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fa fa-arrow-left"></i> Volver a Lista
                </a>
            </form>
        </div>
    </div>
</div>

